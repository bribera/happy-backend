{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "desc": {
      "type": "blocks",
      "required": true
    },
    "content": {
      "type": "blocks"
    },
    "views": {
      "type": "integer"
    },
    "readTime": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "image",
        "vid√©o"
      ]
    },
    "format": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::format.format",
      "inversedBy": "courses"
    }
  }
}
